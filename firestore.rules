rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if user is an admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@houseoftefa.com' || 
        request.auth.token.email == 'mishdgr8@gmail.com' ||
        request.auth.token.email == 'golfwang0x@gmail.com' ||
        request.auth.token.email == 'mishaelmordi@gmail.com'
      );
    }

    // Products collection: Public read, Admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories collection: Public read, Admin write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reviews collection: Public read, Admin write
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default fallback: Block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
